{
    "name": "alessio/puffin",
    "description": "Very minimal framework for web applications",
    "type": "library",
    "autoload": {
        "psr-4": {
            "puffin\\": "src/"
        },
        "files": [
            "src\\template\\template.php",
            "src\\lambda\\foundation.php",
            "src\\data\\factory.php"
        ]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/aleferri/plog.git"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "psalm/phar": "^5.2"
    },
    "require": {
        "php": ">=8.0",
        "alessio/plog": ">=0.0.1"
    },
    "license": "Apache-2",
    "authors": [
        {
            "name": "Alessio Ferri",
            "email": "alessio.ferri.3012@gmail.com"
        }
    ]
}
